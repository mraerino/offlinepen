{
  "entrypoint": "index.html",
  "shell": "src/op-app.html",
  "fragments": [
    "src/view-list.html",
    "src/view-editor.html"
  ],
  "sources": [
    "src/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "_redirects",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [{
    "bundle": true,
    "js": {"minify": true},
    "css": {"minify": true},
    "html": {"minify": true},
    "addServiceWorker": true,
    "insertPrefetchLinks": true
  }]
}
